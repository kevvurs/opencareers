      <div class="op-stat-tile red">
        <h4>Posts Shared</h4>
        <h5>{{ model.shared }}</h5>
      </div>
    </div>
    <div class="col-md-4">
      <div class="op-stat-tile green">
        <h4>Jobs Opened</h4>
        <h5>{{ model.applied }}</h5>
      </div>
    </div>
  </div>
