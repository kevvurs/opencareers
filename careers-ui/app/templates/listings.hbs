{{outlet}}
<div class="mdl-cell--middle mdl-cell--8-col">
  {{#each model as |job|}}
    <div class="mdl-card">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">{{job.title}} - {{job.company}}</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <div class="container">
          <div class="row">
            <h4>Location: {{job.location}}</h4>
            <h4>Salary: {{job.salary}}</h4>
          </div>
          <p>Notes<br />
            {{job.notes}}
          </p>

          <div class="row">
            <a class="mdl-chip" href={{job.glass}}>
              <span class="mdl-chip__text">
                <i class="fa fa-bar-chart" aria-hidden="true"></i>
                GlassDoor
              </span>
            </a>

            <a class="mdl-chip" href={{job.linkedin}}>
              <span class="mdl-chip__text">
                <i class="fa fa-linkedin" aria-hidden="true"></i>
                Linkedin
              </span>
            </a>
          </div>
        </div>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
            target="_blank" href={{job.ref}}>
          Go to resource
        </a>
      </div>
    </div>
  {{/each}}
</div>